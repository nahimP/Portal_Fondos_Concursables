@page
@model TuProyecto.Pages.IndexModel
@{
    ViewData["Title"] = "Fondos Concursables Perú";
    var username = User.Identity.IsAuthenticated ? User.Identity.Name : null;
}

<div class="container mt-5" style="background-color:#eaf0fb; padding:30px; border-radius:12px;">
    <h1 class="text-center text-primary mb-4" style="font-weight:600;">Fondos Concursables Perú</h1>

    @if (username != null)
    {
        <p class="text-center mb-4">
            Bienvenido, <strong>@username</strong>!
            <a asp-page="/Logout" class="btn btn-outline-primary btn-sm">Cerrar sesión</a>
        </p>
    }
    else
    {
        <p class="text-center mb-4">
            Por favor
            <a asp-page="/Login" class="btn btn-outline-primary btn-sm">inicia sesión</a> o
            <a asp-page="/Register" class="btn btn-outline-primary btn-sm">regístrate</a>.
        </p>
    }

    <div class="row">
        <!-- Fondo 1 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100" style="border:none; background-color:#ffffff; border-radius:10px; box-shadow:0 4px 12px rgba(0, 0, 128, 0.1);">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-primary" style="font-weight:600;">Fondo Innovación Juvenil 2025</h5>
                    <p class="card-text"><strong>Descripción:</strong> Apoyo económico para jóvenes emprendedores con proyectos tecnológicos.</p>
                    <p class="card-text"><strong>Financiamiento:</strong> Hasta S/ 50,000</p>
                    <p class="card-text"><strong>Beneficiados:</strong> Jóvenes 18-30 años</p>
                    <p class="card-text"><strong>Fechas:</strong> 15/03 - 30/04/2025</p>
                    <p class="card-text"><strong>Dirección:</strong> Av. Arequipa 1234, Lima</p>
                    <a asp-page="/Postulacion" asp-route-Fondo="Fondo Innovación Juvenil 2025" class="btn btn-primary mt-auto" style="border-radius:8px;">Postularme</a>
                </div>
            </div>
        </div>

        <!-- Fondo 2 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100" style="border:none; background-color:#ffffff; border-radius:10px; box-shadow:0 4px 12px rgba(0, 0, 128, 0.1);">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-primary" style="font-weight:600;">Fondo Mujer Emprende 2025</h5>
                    <p class="card-text"><strong>Descripción:</strong> Fondo para mujeres emprendedoras en zonas rurales.</p>
                    <p class="card-text"><strong>Financiamiento:</strong> Hasta S/ 80,000</p>
                    <p class="card-text"><strong>Beneficiados:</strong> Asociaciones y cooperativas lideradas por mujeres</p>
                    <p class="card-text"><strong>Fechas:</strong> 01/06 - 15/07/2025</p>
                    <p class="card-text"><strong>Dirección:</strong> Jr. Huancavelica 450, Cusco</p>
                    <a asp-page="/Postulacion" asp-route-Fondo="Fondo Mujer Emprende 2025" class="btn btn-primary mt-auto" style="border-radius:8px;">Postularme</a>
                </div>
            </div>
        </div>

        <!-- Fondo 3 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100" style="border:none; background-color:#ffffff; border-radius:10px; box-shadow:0 4px 12px rgba(0, 0, 128, 0.1);">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-primary" style="font-weight:600;">Fondo Cultura y Arte 2025</h5>
                    <p class="card-text"><strong>Descripción:</strong> Apoyo a proyectos artísticos y culturales que promuevan la identidad peruana.</p>
                    <p class="card-text"><strong>Financiamiento:</strong> Hasta S/ 100,000</p>
                    <p class="card-text"><strong>Beneficiados:</strong> Artistas y ONGs culturales</p>
                    <p class="card-text"><strong>Fechas:</strong> 10/09 - 25/10/2025</p>
                    <p class="card-text"><strong>Dirección:</strong> Av. Javier Prado Este 2465, San Borja, Lima</p>
                    <a asp-page="/Postulacion" asp-route-Fondo="Fondo Cultura y Arte 2025" class="btn btn-primary mt-auto" style="border-radius:8px;">Postularme</a>
                </div>
            </div>
        </div>
    </div>
</div>
