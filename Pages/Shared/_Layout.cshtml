<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fondos Concursables</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Barra de navegación minimalista -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#0d6efd;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-page="/Index">Fondos Concursables</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Register">Registro</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Aquí se inyecta el contenido de cada página -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
